@model List<Atleta>
@{
    ViewData["Title"] = "Lista de Atletas";
}

<div class="d-flex justify-content-between">
    <div>
        <h2>@ViewData["Title"]</h2>
    </div>
    <div >
        <a  asp-action="Criar" class=" btn  btn-primary mb-3 btn-user btn-block fa fa-plus">
        Novo
    </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Cidade</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var atleta in Model)
        {
            <tr>
                <td>@atleta.Nome</td>
                <td>@atleta.DataNascimento.ToShortDateString()</td>
                <td>@atleta.Endereco.Logradouro</td>
                <td>@atleta.Endereco.Uf</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = atleta.Id })" class="btn btn-success" title="Editar">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = atleta.Id })" class="btn btn-danger btn-fab btn-round" title="Excluir">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
