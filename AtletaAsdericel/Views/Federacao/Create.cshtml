@model AtletaAsdericel.Models.Federacao

@{
	ViewBag.Title = "Create";
}
<h2>Cadastrar Federação</h2>
<hr />
<form class="user " asp-action="create" method="post">
	<input type="hidden" asp-for="Id" />
	<div class="form-group row">
		<div class="col-md-6 ">
			<input type="text" asp-for=Nome class="form-control form-control-user" placeholder="Nome">
		</div>
		<div class="col-md-6  ">
			<input type="text" asp-for=Sigla class="form-control form-control-user" placeholder="Sigla">
		</div>
	</div>
	<div class="col-sm-6 mb-3 ">
		<button type="submit" class="btn btn-primary">
			@(Model.Id == 0 ? "Criar" : "Salvar Alterações")
		</button>
	</div>
</form>

<div>
	@Html.ActionLink("Voltar para Lista", "Index")
</div>
