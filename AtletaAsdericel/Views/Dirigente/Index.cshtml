@model List<Dirigente>

@{
    ViewData["Title"] = "Lista de Dirigentes Técnicos";
}

<div class="d-flex justify-content-between">
    <div>
        <h2>@ViewData["Title"]</h2>
    </div>
    <div >
        <a  asp-action="Criar" class=" btn  btn-primary mb-3 btn-user btn-block">
        Novo
    </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Cidade</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var atleta in Model)
        {
            <tr>
                <td>@atleta.Nome</td>
                <td>@atleta.DataNascimento.ToShortDateString()</td>
                <td>@atleta.Endereco.Logradouro</td>
                <td>@atleta.Endereco.Uf</td>
            </tr>
        }
    </tbody>
</table>
