@model AtletaAsdericel.ViewModels.ModalidadeEditViewModel
@using AtletaAsdericel.Models.Enum

@{
    ViewBag.Title = "Editar";
}
<h2>Editar Modalidade</h2>
<hr />
<form class="user " asp-action="edit" method="post">
    <div class="form-group row mt-4 ">
        <input type="hidden"  asp-for="Id"  value="@Model.Id"/>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 ">
                <input type="text" asp-for=Nome class="form-control form-control-user" placeholder="Nome">
            </div>
            <div class="col-sm-6 mb-3 ">
                <select multiple="multiple" asp-for="CategoriaIds" type="text" asp-items="Model.Categorias" class="form-control rounded-pill" placeholder="Selecione">
                    <option value="">Selecione a categoria ...</option>
                </select>
            </div>
            <div class="col-sm-6 mb-3 ">
                <select multiple="multiple" asp-for="SexoIds" type="text" asp-items="Model.Sexos" class="form-control rounded-pill" placeholder="Selecione">
                    <option value="">Selecione o genero ...</option>
                </select>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-user btn-block ">
        Gravar
    </button>
</form>

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

