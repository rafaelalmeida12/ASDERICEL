@model List<Modalidade>

@{
    ViewData["Title"] = "Lista de Modalidades";
}

<div class="d-flex justify-content-between">
    <div>
        <h2>@ViewData["Title"]</h2>
    </div>
    <div>
        <a asp-action="create" class=" btn  btn-primary mb-3 btn-user btn-block">
            Novo
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var atleta in Model)
        {
            <tr>
                <td>@atleta.Nome</td>
                @foreach (var categoria in atleta.ModalidadeCategorias)
                {
                    <td>@categoria.Modalidade.Nome</td>
                }
            </tr>
        }
    </tbody>
</table>
